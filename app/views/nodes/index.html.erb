<h1>All Discussions</h1>

<ul class="node-container">
  <% @nodes.each do |node| %>
    <% if (node.sources.empty?) %>
      <li>
        <%= render node, :recurse_count => 0 %>
      </li>
    <% end %>
  <% end %>
</ul>

<br />

<% if permitted_to? :create, Node.new %>
  <%= render "shared/new_node_link" %>
<% end %>
