<%= form_for(@topic) do |f| %>
  <fieldset>
    <%= render 'shared/error_messages', :object => f.object %>

    <div class="clearfix">
      <%= f.label :title %>
      <div class="input">
        <%= f.text_field :title, :class => "xxlarge", :size => "80" %>
      </div>
    </div>
    <div class="clearset">
      <%= f.label :description %>
      <div class="input">
        <%= f.text_area :description, :class => "xxlarge", :rows => "5" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit :class => "btn primary" %>
    </div>
  </fieldset>
<% end %>
