<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      <% if Rails.env.development? %>
        <pre class="debug_dump">DEBUG OUTPUT</pre>
        <%= debug params %>
        <% if current_user %>
          <%= debug current_user %>
        <% else %>
          <pre class="debug_dump">No user logged in</pre>
        <% end %>
      <% end %>
    </div>
  </body>
</html>
