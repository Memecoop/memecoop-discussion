<header>
  <nav id="nav_menu" class="round">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <% if permitted_to? :read, Topic.new %>
        <li><%= link_to "All Topics", topics_path %>
      <% end %>
      <% if permitted_to? :manage, User.new %>
        <li><%= link_to "Manage Users", users_path %></li>
      <% end %>
      <% if permitted_to? :manage, Node.new %>
        <li><%= link_to "Manage Nodes", nodes_path %></li>
      <% end %>
      <% if permitted_to? :manage, Edge.new %>
        <li><%= link_to "Manage Edges", edges_path %></li>
      <% end %>
    </ul>
  </nav>

  <nav id="user_menu" class="round">
    <ul>
      <% if current_user %>
        <li>Logged in as <%= current_user.name %></li>
        <li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
        <li><%= link_to "Logout", logout_path %></li>
      <% else %>
        <li><%= link_to "Connect With Facebook", "/auth/facebook" %></li>
      <% end %>
    </ul>
  </nav>
</header>