<h1>Sign in</h1>

<%= form_for @user_session do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>

<p>New user? <%= link_to "Register now!", signup_path %></p>

